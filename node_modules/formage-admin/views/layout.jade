!!! 5
html(lang='en')
    head
        meta(http-equiv='Content-type', content='text/html; charset=utf-8')
        title!= pageTitle
        link(rel='stylesheet', href='/css/bootstrap.css', charset='utf-8')
        link(rel='stylesheet', href='/css/emp.css', charset='utf-8')
        link(rel='stylesheet', href='/css/forms.css', charset='utf-8')
        script(src='/js/jquery-1.8.2.min.js')
        script(src="/js/jquery-ui-1.9.0.custom.min.js")
        != typeof(renderedHead) != 'undefined' ? renderedHead : ''
        script(src='/js/bootstrap.min.js')
    body
        .container
            header.page-header.well
                block nav
                    .btn-group.pull-right
                        a.btn.btn-info(href='#{rootPath}/')
                            i.icon-home.icon-white
                            |  Home
                        a.btn(href='#{rootPath}/logout')
                            .icon-off
                            |  Logout
                h1
                    block title
                        a(href='#{rootPath}/') #{adminTitle}
                    block breadcrumb

            div#content
                block body
            hr
            footer
                a(href='http://github.com/etaypere/formage-admin') Formage-Admin
                | , &nbsp;
                a(href='http://empeeric.com') Empeeric


        script
            var root = '#{rootPath}';

        block scripts

